@model IEnumerable<Proj.Models.Camera>
@{
    ViewData["Title"] = "Equipment";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .page-action-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .section-label {
        color: white;
        font-size: 18px;
        font-weight: 500;
    }

    .equipment-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .equip-card {
        background: white;
        border-radius: 20px;
        padding: 20px 40px;
        display: flex;
        flex-direction: column;
        position: relative;
        min-height: 250px;
    }

    .equip-image-container {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

    .equip-img {
        height: 120px;
        width: auto;
        object-fit: contain;
    }

    .equip-info-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        border-top: 1px solid #eee;
        padding-top: 15px;
    }

    .equip-name {
        font-size: 18px;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
    }

    .equip-price {
        font-size: 20px;
        font-weight: 800;
        color: #000;
    }

    .status-pill {
        padding: 8px 25px;
        border-radius: 50px;
        font-size: 12px;
        font-weight: 700;
        color: white;
        text-transform: uppercase;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .status-available {
        background-color: #007bff;
    }

    .status-rented {
        background-color: #27ae60;
    }

    .status-add {
        background-color: #27ae60;
        transition: 0.3s;
    }

        .status-add:hover {
            background-color: #219150;
        }

    .card-actions {
        position: absolute;
        top: 20px;
        right: 20px;
        opacity: 0;
        transition: 0.2s;
        display: flex;
        gap: 5px;
    }

    .equip-card:hover .card-actions {
        opacity: 1;
    }

    .action-btn {
        background: #f0f0f0;
        border: none;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: #333;
        text-decoration: none;
        transition: 0.2s;
    }

        .action-btn:hover {
            background: #e0e0e0;
        }
</style>

<div class="page-action-header">
    <div class="section-label">Camera Inventory</div>
    <a asp-action="CreateCamera" class="status-pill status-add">
        <i data-lucide="plus" width="14"></i> Add New Camera
    </a>
</div>

<div class="equipment-list">
    @foreach (var item in Model)
    {
        <div class="equip-card">
            <div class="card-actions">
                <a asp-action="EditCamera" asp-route-id="@item.Id" class="action-btn" title="Edit">
                    <i data-lucide="edit-2" width="16"></i>
                </a>

                <form asp-action="DeleteCamera" method="post" onsubmit="return confirm('Are you sure you want to delete this camera?');" style="display:inline;">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button type="submit" class="action-btn" title="Delete" style="color:red">
                        <i data-lucide="trash" width="16"></i>
                    </button>
                </form>
            </div>

            <div class="equip-image-container">
                <img src="~/images/@item.ImageUrl" class="equip-img" alt="@item.Name" />
            </div>

            <div class="equip-info-row">
                <div>
                    <div class="equip-name">@item.Name</div>
                    <div class="equip-price">₱@item.Price.ToString("N0")</div>
                </div>

                @if (item.IsAvailable)
                {
                    <div class="status-pill status-available">AVAILABLE</div>
                }
                else
                {
                    <div class="status-pill status-rented">RENTED</div>
                }
            </div>
        </div>
    }
</div>

<script src="https://unpkg.com/lucide@latest"></script>
<script>
    lucide.createIcons();
</script>