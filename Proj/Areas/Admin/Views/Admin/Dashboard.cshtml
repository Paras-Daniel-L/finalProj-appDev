@model IEnumerable<Proj.Models.Reservation>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .section-label {
        color: white;
        margin-bottom: 20px;
        font-size: 16px;
    }

    .stats-stack {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 20px 30px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100px;
    }

    .stat-label {
        font-size: 14px;
        color: #666;
        margin-bottom: 5px;
        font-weight: 600;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 600;
        color: #1a2e2a;
    }

    .table-card {
        background: white;
        border-radius: 12px;
        padding: 25px;
    }

    .table-title {
        font-size: 16px;
        font-weight: 700;
        color: #333;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        text-align: left;
        font-size: 12px;
        color: #888;
        text-transform: uppercase;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    td {
        padding: 15px 0;
        font-size: 14px;
        font-weight: 500;
        color: #333;
        border-bottom: 1px solid #f0f0f0;
    }

    .badge {
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        color: white;
        text-transform: uppercase;
    }

    .bg-pending {
        background-color: #F1C40F;
    }

    .bg-approved {
        background-color: #2980B9;
    }

    .bg-active {
        background-color: #27AE60;
    }

    .bg-rejected {
        background-color: #C0392B;
    }

    .action-row {
        display: flex;
        gap: 10px;
    }

    .btn-icon {
        border: none;
        background: none;
        cursor: pointer;
        transition: 0.2s;
        padding: 0;
    }

        .btn-icon:hover {
            transform: scale(1.1);
        }

    .icon-view {
        color: #2980B9;
    }

    .icon-reject {
        color: #C0392B;
    }

    .view-all-link {
        font-size: 12px;
        color: #1a2e2a;
        text-decoration: none;
        font-weight: 600;
    }

        .view-all-link:hover {
            text-decoration: underline;
        }
</style>

<div class="section-label">Dashboard Overview</div>

<div class="stats-stack">
    <div class="stat-card">
        <div class="stat-label">Total Reservations</div>
        <div class="stat-value">@ViewBag.TotalReservations</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Pending Approval</div>
        <div class="stat-value">@ViewBag.PendingApproval</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Active Rentals</div>
        <div class="stat-value">@ViewBag.ActiveRentals</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Total Revenue</div>
        <div class="stat-value">₱@(((decimal)ViewBag.TotalRevenue).ToString("N0"))</div>
    </div>
</div>

<div class="table-card">
    <div class="table-title">
        <span>Recent Reservations</span>
        <a asp-action="Reservations" class="view-all-link">View All</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>RESERVATION ID</th>
                <th>CUSTOMER</th>
                <th>ITEM</th>
                <th>STATUS</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Take(5))
            {
                <tr>
                    <td>#RES-@item.Id.ToString("D4")</td>
                    <td>@item.User?.FullName</td>
                    <td>@item.Camera?.Name</td>

                    <td>
                        <span class="badge bg-@item.Status?.ToLower()">@item.Status</span>
                    </td>

                    <td>
                        <div class="action-row">
                            @if (item.Status == "Pending")
                            {
                                <form asp-action="UpdateStatus" method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="status" value="Approved" />
                                    <button class="btn-icon icon-view" title="Approve">
                                        <i data-lucide="check-circle" width="20"></i>
                                    </button>
                                </form>
                                <form asp-action="UpdateStatus" method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="status" value="Rejected" />
                                    <button class="btn-icon icon-reject" title="Reject">
                                        <i data-lucide="x-circle" width="20"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span style="color:#ccc; font-size:12px; font-weight:normal;">Processed</span>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://unpkg.com/lucide@latest"></script>
<script>
    lucide.createIcons();
</script>