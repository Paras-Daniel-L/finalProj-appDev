@model IEnumerable<Proj.Models.User>
@{
    ViewData["Title"] = "Customers";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .header-title {
        color: white;
        font-size: 18px;
        font-weight: 500;
    }

    .search-container {
        position: relative;
    }

    .search-input {
        background-color: transparent;
        border: 2px solid white;
        border-radius: 50px;
        padding: 8px 20px 8px 40px;
        color: white;
        font-size: 13px;
        width: 250px;
        outline: none;
        font-weight: 500;
    }

        .search-input::placeholder {
            color: rgba(255,255,255,0.8);
        }

    .search-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: white;
        width: 16px;
    }

    .table-card {
        background: white;
        border-radius: 20px;
        padding: 30px 40px;
        min-height: 400px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .card-title {
        font-size: 18px;
        font-weight: 700;
        color: #333;
        margin-bottom: 25px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        text-align: left;
        font-size: 11px;
        font-weight: 800;
        color: #1a2e2a;
        text-transform: uppercase;
        padding-bottom: 15px;
    }

    td {
        padding: 20px 0;
        font-size: 13px;
        font-weight: 700;
        color: #1a2e2a;
        vertical-align: middle;
        border-bottom: 2px solid #000;
    }

    tr:last-child td {
        border-bottom: none;
    }

    .status-badge {
        padding: 6px 15px;
        border-radius: 50px;
        font-size: 10px;
        font-weight: 800;
        color: white;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-block;
        min-width: 80px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .bg-active {
        background-color: #27ae60;
    }

    .bg-banned {
        background-color: #e74c3c;
    }

    .action-row {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .btn-icon {
        border: none;
        background: none;
        cursor: pointer;
        transition: 0.2s;
        padding: 0;
        display: flex;
        align-items: center;
    }

        .btn-icon:hover {
            transform: scale(1.1);
        }

    .icon-view {
        color: #3498db;
    }

    .icon-check {
        color: #27ae60;
    }

    .icon-x {
        color: #e74c3c;
    }
</style>

<div class="page-header">
    <div class="header-title">Customers Management</div>

    <form class="search-container" asp-area="Admin" asp-controller="Admin" asp-action="Customers" method="get">
        <i data-lucide="search" class="search-icon"></i>
        <input type="text" name="searchString" class="search-input" placeholder="Search Customer" />
    </form>
</div>

<div class="table-card">
    <div class="card-title">Recent Customers</div>

    <table>
        <thead>
            <tr>
                <th>CUSTOMER ID</th>
                <th>CUSTOMER</th>
                <th>EMAIL</th>
                <th>PHONE NO.</th>
                <th>TOTAL RENTALS</th>
                <th>STATUS</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                int rentalCount = user.Reservations != null ? user.Reservations.Count : 0;
                string status = "ACTIVE";
                string badgeClass = "bg-active";

                <tr>
                    <td>CUST-@user.Id.Substring(0, 5).ToUpper()</td>
                    <td>@user.FullName.ToUpper()</td>
                    <td style="text-transform:none; font-weight:500;">@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td style="text-align:center; padding-right:50px;">@rentalCount</td>

                    <td><span class="status-badge @badgeClass">@status</span></td>

                    <td>
                        <div class="action-row">
                            <a asp-area="Admin" asp-controller="Admin" asp-action="Reservations" asp-route-searchString="@user.FullName" class="btn-icon icon-view" title="View Rental History">
                                <i data-lucide="eye" width="18"></i>
                            </a>

                            <button class="btn-icon icon-check" type="button" title="Activate User">
                                <i data-lucide="check-circle-2" width="18"></i>
                            </button>

                            <button class="btn-icon icon-x" type="button" title="Ban User">
                                <i data-lucide="x-circle" width="18"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://unpkg.com/lucide@latest"></script>
<script>
    lucide.createIcons();
</script>
