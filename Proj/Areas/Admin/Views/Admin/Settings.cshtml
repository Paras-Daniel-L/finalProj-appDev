@model Proj.Models.User
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .settings-stack {
        display: flex;
        flex-direction: column;
        gap: 25px;
        max-width: 900px;
    }

    .settings-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .card-title {
        font-size: 18px;
        font-weight: 700;
        color: #1a2e2a;
        margin-bottom: 5px;
    }

    .card-subtitle {
        font-size: 14px;
        color: #666;
        margin-bottom: 25px;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 15px;
    }

    .form-group {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    label {
        font-size: 13px;
        font-weight: 600;
        color: #444;
    }

    input[type="text"], input[type="email"], input[type="password"], textarea {
        padding: 12px 15px;
        border: 2px solid #eee;
        border-radius: 10px;
        font-size: 14px;
        width: 100%;
        outline: none;
        transition: 0.2s;
        background-color: #fff;
    }

        input:focus, textarea:focus {
            border-color: #1a2e2a;
        }

    textarea {
        resize: vertical;
        min-height: 80px;
    }

    .btn-action {
        background-color: #3b5d50;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 50px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        width: fit-content;
        margin-top: 10px;
        transition: 0.2s;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .btn-action:hover {
            background-color: #1a2e2a;
            transform: translateY(-1px);
        }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 600;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .db-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid #eee;
    }

        .db-row:last-child {
            border-bottom: none;
        }

    .db-info h4 {
        font-size: 14px;
        margin: 0;
        color: #333;
    }

    .db-info p {
        font-size: 12px;
        margin: 2px 0 0;
        color: #888;
    }
</style>

<div style="margin-bottom: 25px;">
    <h2 style="color: white; font-size: 20px;">System Settings</h2>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="settings-stack">

    <div class="settings-card">
        <div class="card-title">Admin Account Settings</div>
        <div class="card-subtitle">Camera Rental</div>

        <form asp-action="UpdateProfile" method="post">
            <div class="form-row">
                <div class="form-group">
                    <label>Admin Name</label>
                    <input type="text" name="FullName" value="@Model.FullName" required />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="Email" value="@Model.Email" required />
                </div>
            </div>
            <button type="submit" class="btn-action">Update Account</button>
        </form>
    </div>

    <div class="settings-card">
        <div class="card-title">Change Password</div>
        <div class="card-subtitle" style="margin-bottom:15px;">Secure your admin account</div>

        <form asp-action="ChangePassword" method="post">
            <div class="form-group" style="margin-bottom: 15px;">
                <label>Current Password</label>
                <input type="password" name="CurrentPassword" required />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>New Password</label>
                    <input type="password" name="NewPassword" required />
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" name="ConfirmPassword" required />
                </div>
            </div>
            <button type="submit" class="btn-action">Change Password</button>
        </form>
    </div>

    <div class="settings-card">
        <div class="card-title">Pickup/Delivery Locations</div>
        <div class="card-subtitle">Manage Locations</div>

        <form>
            <div class="form-group">
                <textarea placeholder="Add pickup locations and delivery fees..."></textarea>
            </div>
            <button type="button" class="btn-action" onclick="alert('Locations saved!');">Update Locations</button>
        </form>
    </div>

    <div class="settings-card">
        <div class="card-title">Database Management</div>
        <div class="card-subtitle" style="margin-bottom: 10px;"></div>

        <div class="db-row">
            <div class="db-info">
                <h4>Backup Database</h4>
                <p>Create a backup of all data</p>
            </div>
            <button type="button" class="btn-action" onclick="alert('Backup started...');">Backup Now</button>
        </div>

        <div class="db-row">
            <div class="db-info">
                <h4>Restore Database</h4>
                <p>Restore from previous backup</p>
            </div>
            <button type="button" class="btn-action" onclick="alert('Restore feature coming soon.');">Restore</button>
        </div>

        <div class="db-row">
            <div class="db-info">
                <h4>Clear Cache</h4>
                <p>Clear system cache data</p>
            </div>
            <button type="button" class="btn-action" onclick="alert('Cache cleared!');">Clear</button>
        </div>
    </div>

</div>