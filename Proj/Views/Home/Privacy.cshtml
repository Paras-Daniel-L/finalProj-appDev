@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>

  <script src="https://unpkg.com/lucide@latest"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poller+One&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/login-style/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login-style/login-general.css" asp-append-version="true" />

</head>
<body>
  <main class="login-ui">
    <div class="login-left">
      <img class="camera" src="~/css/login-style/Cameraa 2.png" alt="Cameras">
    </div>
    <div class="login-right">
      <div class="login-right-wel">
        <p class="welcome">
          Welcome Back!
        </p>
        <p class="notice">
          Log in to book a camera
        </p>
      </div>
      <div class="login-div">
        <div class="email-text">
          <p>Email</p>
        </div>
        <div class="login-right-email">
          <i data-lucide="mail" class="input-icon"></i>
          <input class="email-input" type="email" placeholder="Enter your email">
        </div>

        <div class="email-text">
          <p>Password</p>
        </div>
        <div class="login-right-email">
          <i data-lucide="lock" class="password-icon"></i>
          <input class="email-input" type="password" placeholder="Enter your Password">
        </div>
      </div>

      <div class="login-right-rem">
        <div class="left-side">
          <div class="checkbox-div">
            <input class="checkbox" type="checkbox">
          </div>
          <div class="remember-div">
            <p>Remember Me</p>
          </div>
        </div>

        <div class="forgot-password-div">
          <a href="#"><p>Forgot Password</p></a>
        </div>
      </div>

      <div class="login-right-button">
        <button class="login-button">
          Login
        </button>
      </div>
    </div>
  </main>
  <script>
    lucide.createIcons();
  </script>
</body>
</html>