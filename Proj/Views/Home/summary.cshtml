  <script src="https://unpkg.com/lucide@latest"></script>
  <link rel="stylesheet" href="~/css/summary-style/main.css" asp-append-version="true">
  <link rel="stylesheet" href="~/css/summary-style/sidebar.css" asp-append-version="true">
