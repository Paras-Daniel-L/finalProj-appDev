        <button class="confirm-btn">
          Confirm
        </button>
      </div>
    </div>
  
  </main>
  
  <nav class="side-bar">
    <button class="back-btn">
      <i class="arrow-left" data-lucide="arrow-left" width="30" height="35"></i>
    </button>

