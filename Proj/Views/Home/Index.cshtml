@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poller+One&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

  <script src="https://unpkg.com/lucide@latest"></script>
  <link rel="stylesheet" href="~/css/main-style/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/main-style/main-login.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/main-style/sidebar.css" asp-append-version="true" />
</head>
<body>
  <main>
    <div class="main-login">
      <div class="left-login">
        <div class="left-login-top">
          <p>
            Canon
          </p>
        </div>
        <div class="left-login-bottom">
          <img src="~/css/main-style/image 5.png" alt="Camera image">
          <div class="radius-circle"></div>
        </div>
      </div>
      <div class="right-login">
        <div class="right-login-top">
          <div class="right-login-top-product">
            <a href="https://photo-op.ph/product-category/digital-cameras/" target="_self">
              <button class="admin-button">
                Admin
              </button>
            </a>

          </div>
          <div class="right-login-top-about">
            <a class="about" href="https://www.facebook.com/profile.php?id=61581813770233" target="_self">
              <p>
                About Us
              </p>
            </a>
          </div>
        </div>
        <div class="right-login-bottom">
          <div class="right-login-bottom-mess">
            <p>
              Premium camera rentals with a seamless, hassle-free booking experience.
            </p>
          </div>
          <div class="right-login-button">
            <button class="login-button">
              Login
            </button>
          </div>
          <div class="right-login-bottom-reg">
            <p>
              Don't have an account? <a href="#">Register</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
  <nav class="side-bar">
    <a class="instagram-button" href="https://www.instagram.com/danielcaesar/" target="_blank">
      <i data-lucide="instagram" class="instagram"></i>
    </a>
    <a class="facebook-button" href="https://www.facebook.com/DanielCaesar" target="_blank">
      <i data-lucide="facebook" class="facebook"></i>
    </a>
    <a class="twitter" href="https://x.com/DanielCaesar" target="_blank">
          <i data-lucide="twitter" class="twitter"></i>
    </a>
  </nav>

  <script>
  lucide.createIcons();
  </script>
</body>
</html>