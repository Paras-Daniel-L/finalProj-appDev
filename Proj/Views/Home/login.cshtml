@{
    Layout = null;
    // LOGIC: Check if this is an Admin login attempt
    string returnUrl = ViewData["ReturnUrl"] as string;
    bool isAdmin = !string.IsNullOrEmpty(returnUrl) && returnUrl.Contains("Admin");

    // Dynamic Text
    string welcomeText = isAdmin ? "Welcome, Admin!" : "Welcome Back!";
    string noticeText = isAdmin ? "System Management Access" : "Log in to book a camera";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <script src="https://unpkg.com/lucide@latest"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poller+One&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/login-style/main.css" asp-append-version="true">

    <style>
        /* YOUR ORIGINAL STYLES */
        .back-btn {
            position: absolute;
            top: 30px;
            left: 30px;
            width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(5px);
            border: 2px solid white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            cursor: pointer;
            z-index: 100;
            transition: 0.3s;
        }

            .back-btn:hover {
                background: white;
                color: #1a2e2a;
                transform: scale(1.1);
            }

        .glass-alert {
            position: fixed;
            top: 30px;
            right: 30px;
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            background: rgba(231, 76, 60, 0.25);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(231, 76, 60, 0.6);
            color: #ff6b6b;
            padding: 15px 25px;
            border-radius: 12px;
            font-size: 0.9rem;
            font-family: 'Poppins', sans-serif;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            opacity: 1;
            transition: opacity 0.5s ease-out;
            animation: slideInRight 0.5s ease-out;
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .toggle-password-btn {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #aaa;
            padding: 0;
            z-index: 10;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .toggle-password-btn:hover {
                color: #fff;
            }

  
    </style>
</head>
<body>

    <a href="/Home/Main" class="back-btn" title="Back to Home">
        <i data-lucide="arrow-left"></i>
    </a>

    <main class="login-ui">
        <div class="login-left">
            <img class="camera-images" src="~/css/login-style/Cameraa 2.png" alt="Cameras">
        </div>

        <div class="login-right @(isAdmin ? "admin-theme" : "")">

            @if (!ViewData.ModelState.IsValid)
            {
                <div id="errorAlert" class="glass-alert">
                    <i data-lucide="alert-circle" style="width: 20px; height: 20px;"></i>
                    <span>@(ViewData.ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage ?? "Invalid Login")</span>
                </div>
            }

            <div class="login-right-wel">
                <p class="welcome">@welcomeText</p>
                <p class="notice">@noticeText</p>
            </div>

            <form asp-controller="Home" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <div class="login-div">
                    <div class="email-text"><p>Email</p></div>
                    <div class="login-right-email">
                        <i data-lucide="mail" class="input-icon"></i>
                        <input class="email-input" type="email" name="email" placeholder="Enter your email" required>
                    </div>

                    <div class="email-text"><p>Password</p></div>
                    <div class="login-right-email" style="position: relative;">
                        <i data-lucide="lock" class="input-icon"></i>
                        <input id="passwordInput" class="email-input" style="padding-right: 45px;" type="password" name="password" placeholder="Enter your Password" required>
                        <button type="button" class="toggle-password-btn" onclick="togglePassword()">
                            <i data-lucide="eye" id="eyeIcon"></i>
                        </button>
                    </div>
                </div>

                <div class="login-right-rem">
                    <div class="left-side">
                        <div class="checkbox-div">
                            <input class="checkbox" type="checkbox" name="rememberMe" value="true">
                        </div>
                        <div class="remember-div"><p>Remember Me</p></div>
                    </div>
                    <div class="forgot-password-div">
                        <a href="#"><p>Forgot Password</p></a>
                    </div>
                </div>

                <div class="login-right-button">
                    <button type="submit" class="login-button">Login</button>
                </div>

                @if (!isAdmin)
                {
                    <div style="margin-top: 25px; margin-right: 100px; text-align: center; font-family: 'Poppins', sans-serif;">
                        <p style="color: white; font-size: 13px;">
                            Don't have an account?
                            <a asp-controller="Home" asp-action="Registration" style="color: white; font-weight: bold; text-decoration: none;">
                                Register here
                            </a>
                        </p>
                    </div>
                }
            </form>
        </div>
    </main>

    <script>
        lucide.createIcons();

        function togglePassword() {
            var passwordField = document.getElementById("passwordInput");
            var icon = document.getElementById("eyeIcon");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.style.color = "white";
            } else {
                passwordField.type = "password";
                icon.style.color = "#aaa";
            }
        }

        setTimeout(function() {
            var alertBox = document.getElementById("errorAlert");
            if (alertBox) {
                alertBox.style.opacity = "0";
                setTimeout(function() { alertBox.style.display = "none"; }, 500);
            }
        }, 3000);
    </script>
</body>
</html>